@{
    ViewData["Title"] = "Details";
    ViewData["Menu"] = "Employee";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}

<div class="employeeDetail">
    <div class="btns">
        <a asp-area="" asp-controller="Employee" asp-action="Index">
            <i class="ri-arrow-left-circle-line"></i>
            Voltar</a>
        <a>
            <i class="ri-at-line"></i>
            Send email</a>
        <a>
            <i class="ri-printer-line"></i>
            Print</a>
    </div>
    <div class="info">
        <section>
            <div class="data">
                <h4>Nome</h4>
                <p>@ViewBag.E.Id<br />@ViewBag.E.Name<br />@ViewBag.E.Surname</p>
            </div>
            <div class="data">
                <h4>Gênero</h4>
                <p>@ViewBag.E.Gender</p>
            </div>
            <div class="data">
                <h4>Documento</h4>
                <p>@ViewBag.E.Document.Name<br />@ViewBag.E.Document.Number</p>
            </div>
            <div class="data">
                <h4>Contacto</h4>
                <p>Telefone<br />Fixo<br />Email</p>
            </div>
            <div class="data">
                <h4>Endereço</h4>
                <p>Província<br />Distrito<br />Av./ Rua</p>
            </div>
            <div class="data">
                <h4>Data Criação</h4>
                <p>@ViewBag.E.CreateAt.ToShortDateString()<br />@ViewBag.E.CreateAt.ToShortTimeString()</p>
            </div>
        </section>
    </div>
</div>
