<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/adminLayout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@2.2.0/fonts/remixicon.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav>
            <div class="list">
                <div class="logo">
                    <i class="fa-solid fa-shield-halved"></i>
                </div>
                <ul>
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Painel</a></li>
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Index">
                            Cadastro
                            <i class="ri-arrow-drop-down-line"></i>
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Index">
                            Estoque
                            <i class="ri-arrow-drop-down-line"></i>
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Courses" asp-action="Index">
                            Vendas
                            <i class="ri-arrow-drop-down-line"></i>
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Contact" asp-action="Index">
                            Finânceiro
                            <i class="ri-arrow-drop-down-line"></i>
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Contact" asp-action="Index">
                            Serviços
                            <i class="ri-arrow-drop-down-line"></i>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="list">
                <div class="">
                    <i class="fa-solid fa-circle-question"></i>
                    <i class="fa-solid fa-gear"></i>
                    <i class="fa-solid fa-bell"></i>
                </div>
                <div class="profile">
                    <label>
                        <img src="~/img/profile/user-32.png" />
                    </label>
                </div>
            </div>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <div class="container">
            &copy;2023 Solus Inc. <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
