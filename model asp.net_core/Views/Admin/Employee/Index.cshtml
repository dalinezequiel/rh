@using model_asp.net_core.Models;
@{
    ViewData["Title"] = "Index";
    ViewData["Menu"]="Employee";
    Layout = "~/Views/Shared/_TinLayout.cshtml";
}

@{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    if (ViewData["error"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                title: 'Erro!',
                icon: 'error',
                html: '@ViewData["error"]',
                focusConfirm: true,
                confirmButtonText: 'OK, entendi!',
                showLoaderOnConfirm: true,
            });
        </script>
    }
}

<div class="employee">
    <section class="search">
        <div class="add-btn">
            <a asp-area="" asp-controller="Employee" asp-action="Create">
                <i class="ri-add-line"></i>
                Adicionar</a>
        </div>
        <div class="sea">
            <div>
                <select>
                    <option>Selecione</option>
                    <option>Todos</option>
                    <option>Mais recentes</option>
                    <optgroup label="Província">
                        <option>Maputo</option>
                        <option>Gaza</option>
                    </optgroup>
                </select>
            </div>
            <div class="select">
                <select>
                    <option>Selecione</option>
                    <option>Masculino</option>
                    <option>Femenino</option>
                </select>
            </div>
            <div class="date">
                <div>
                    <input type="date" />
                </div>
                <label>á</label>
                <div>
                    <input type="date" />
                </div>
            </div>
        </div>
        <div class="search-btn">
            <input type="text" placeholder="Search .." />
            <a><i class="ri-search-line"></i></a>
        </div>
    </section>
    <section class="table">
        <table>
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                    <td>Surname</td>
                    <td>Gender</td>
                    <td>Document</td>
                    <td>Doc. Number</td>
                    <td>Create At</td>
                    <td>Ação</td>
                </tr>
            </thead>
            <tbody>
                @foreach(EmployeeModel em in ViewBag.listEmployee)
                {
                    if(em != null)
                    {
                        <tr>
                            <td>@em.Id</td>
                            <td>@em.Name</td>
                            <td>@em.Surname</td>
                            <td>@em.Gender</td>
                            <td>@em.Document</td>
                            <td>@em.DocNumber</td>
                            <td>@em.CreateAt.ToShortDateString()</td>
                            <td class="action">
                                <div class="edit">
                                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@em.Id">
                                        <i class="ri-pencil-line"></i>
                                    </a>
                                </div>
                                <div class="detail">
                                    <a asp-controller="Employee" asp-action="Details" asp-route-id="@em.Id">
                                        <i class="ri-eye-line"></i>
                                    </a>
                                </div>
                                <div class="delete">
                                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@em.Id">
                                        <i class="ri-delete-bin-line"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </section>
</div>
