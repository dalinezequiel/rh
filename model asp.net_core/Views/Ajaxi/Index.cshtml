@{
    ViewData["Menu"] = "Employee";
    Layout = "~/Views/Shared/_TinLayout.cshtml";
}

<section>
    <h1>Index Ajaxi</h1>
    <button class="aja">Voltar a index</button>
</section>

<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script type="text/javascript">
    const button = document.querySelectorAll('.aja');
    button[0].addEventListener('click',function(){
        $(document).ready(function () {
            alert("Page is ready!");
            $.ajax({
                type: "GET",
                url: "employee/create",
                //data: { number1: val1, number2: val2 },
                dataType: "html",
                success: function (msg) {
                    Swal.fire({
                        title: 'Sucesso!',
                        icon: 'info',
                        html: 'Requisição AJAX realizada!',
                        focusConfirm: true,
                        confirmButtonText: 'OK, entendi!',
                        showLoaderOnConfirm: true,
                    })
                },
                error: function (req, status, error) {
                    console.log(msg);
                    Swal.fire({
                        title: 'Error!',
                        icon: 'error',
                        html: 'Requisição AJAX não realizada!' + msg,
                        focusConfirm: true,
                        confirmButtonText: 'OK, entendi!',
                        showLoaderOnConfirm: true,
                    })
                }
            });
        });
    });
</script>